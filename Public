<form onsubmit="event.preventDefault(); runLoginTest();">
  <button type="submit">Test Leboncoin Login</button>
</form>
<script>
async function runLoginTest() {
  const r = await fetch('/api/login-test', { method: 'POST' });
  const j = await r.json();
  alert(j.ok ? 'Login OK ✅' : `Login failed ❌: ${j.error || j.message}`);
}
</script>
